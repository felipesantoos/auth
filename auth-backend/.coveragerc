# Coverage.py configuration for auth-backend

[run]
# Measure branch coverage in addition to statement coverage
branch = True

# Source packages to measure
source = 
    core
    app

# Omit files from coverage
omit =
    */tests/*
    */test_*.py
    */__pycache__/*
    */venv/*
    */migrations/*
    */alembic/*
    */conftest.py
    */config/*
    */infra/database/database.py
    main.py

[report]
# Target coverage percentages
# Overall project: 80%+
# Domain layer: 95%+
# Service layer: 90%+
# API layer: 85%+

# Show missing lines
show_missing = True

# Precision for coverage percentage
precision = 2

# Skip covered files in report
skip_covered = False

# Exclude lines from coverage
exclude_lines =
    # Standard pragmas
    pragma: no cover
    
    # Don't complain about missing debug code
    def __repr__
    def __str__
    
    # Don't complain if tests don't hit defensive assertion code
    raise AssertionError
    raise NotImplementedError
    
    # Don't complain if non-runnable code isn't run
    if __name__ == .__main__.:
    if TYPE_CHECKING:
    
    # Don't complain about abstract methods
    @abstractmethod
    @abc.abstractmethod
    
    # Don't complain about pass statements
    pass
    
    # Don't complain about ellipsis in protocols
    \.\.\.

[html]
# Directory for HTML coverage report
directory = htmlcov

[xml]
# Output file for XML coverage report (for CI/CD)
output = coverage.xml

